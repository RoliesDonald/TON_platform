FROM golang:1.21-alpine AS builder

WORKDIR /app

# Copy go mod files
COPY go.mod go.sum ./
RUN go mod download

# Copy only essential files
COPY pkg/ pkg/
COPY internal/ internal/
COPY cmd/ cmd/

# Build minimal version - skip problematic files
RUN CGO_ENABLED=0 GOOS=linux go build -o ton-backend-minimal ./cmd/server

FROM alpine:latest

RUN apk --no-cache add ca-certificates
WORKDIR /root/

COPY --from=builder /app/ton-backend-minimal .

EXPOSE 8080

CMD ["./ton-backend-minimal"]